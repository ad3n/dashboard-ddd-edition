{% extends 'AppBundle:Layout:main.html.twig' %}
{% trans_default_domain 'AppBundle' %}

{% block content %}
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12 sortable-grid ui-sortable">
                <div class="jarviswidget jarviswidget-sortable">
                    <header role="heading">
                        <span class="widget-icon"> <i class="fa fa-crosshairs"></i> </span>
                        <h2>HAPUS DATA</h2>
                        <span class="jarviswidget-loader"><i class="fa fa-refresh fa-spin"></i></span>
                    </header>
                    <div role="content">
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body padding-7">
                            <h3>Anda yakin akan menghapus '{{ data.name }}'?</h3>
                            <form action="{{ path('kabupaten_delete', {'id': data.id}) }}" method="post">
                                <a href = "{{ path('kabupaten_index') }}" class="btn btn-primary margin-right-5">
                                    {{ 'action.reject' | trans }}
                                </a>
                                <button class="btn btn-danger" type="submit">{{ 'action.delete' | trans }}</button>
                            </form>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
{% endblock %}